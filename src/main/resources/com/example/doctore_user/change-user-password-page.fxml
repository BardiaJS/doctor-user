<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER"  xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.doctore_user.ChangeUserPasswordController">
    <Hyperlink style="-fx-font-weight: bold; -fx-border: none; -fx-padding:10px;"
               text="Back To First Page" onAction="#switchToFirstPage"/>

    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-padding-top: 50; -fx-margin-top: 60px; -fx-font-size:20px; -fx-font-weight: bold; -fx-text-fill: #5CB338" alignment="CENTER"  text="Change The Password"/>
    <Label GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <Label fx:id="userOldPasswordLabel" text="Old Password" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 17px;" />
    <Label GridPane.rowIndex="9" GridPane.columnIndex="0" />
    <PasswordField fx:id="userOldPasswordField" promptText="Password" GridPane.rowIndex="10" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 13px;" />
    <Label GridPane.rowIndex="11" GridPane.columnIndex="0" />
    <Label fx:id="userNewPasswordLabel" text="Password" GridPane.rowIndex="12" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 17px;" />
    <Label GridPane.rowIndex="13" GridPane.columnIndex="0" />
    <PasswordField fx:id="userNewPasswordField" promptText="Password" GridPane.rowIndex="14" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 13px;" />
    <Label GridPane.rowIndex="15" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="16" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="17" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="18" GridPane.columnIndex="0" />
    <Label GridPane.rowIndex="19" GridPane.columnIndex="0" />
    <Button GridPane.rowIndex="20" GridPane.columnIndex="0" style="-fx-background-color: #5D8736; -fx-text-fill:black; -fx-font-weight: bold; -fx-font-size: 15px; -fx-border: solid;" fx:id="savePasswordChange" text="Save Password" onAction="#savePasswordChangeButtonClicked"/>
</GridPane>
